<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_playerrow_parent"
    android:layout_margin="8dp"
    android:background="@drawable/shapeactive_m"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:scaleType="centerCrop"
            android:background="@drawable/shapeimage_m"
            android:id="@+id/img_playerrow_image"
            android:layout_centerHorizontal="true"
            tools:src="@mipmap/ic_launcher"
            android:layout_margin="8dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/txt_playerrow_name"
            android:layout_below="@id/img_playerrow_image"
            android:layout_centerHorizontal="true"
            tools:text="Short Name : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_playerrow_jumpernumber"
            android:layout_below="@id/txt_playerrow_name"
            android:layout_centerHorizontal="true"
            tools:text="Jumper Number : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_playerrow_position"
            android:layout_below="@id/txt_playerrow_jumpernumber"
            android:layout_centerHorizontal="true"
            tools:text="Position : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_playerrow_statvalue"
            android:layout_below="@id/txt_playerrow_position"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            tools:text="Stat Value : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>